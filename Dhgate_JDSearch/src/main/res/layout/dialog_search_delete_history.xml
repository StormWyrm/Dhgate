<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_search_dialog_delete"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/search_dialog_remove_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_large" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/search_dialog_cancle"
            android:textColor="@android:color/black"
            android:background="@drawable/selector_search_list_item"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff00"
            android:gravity="center"
            android:text="@string/search_dialog_confirm"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>
</LinearLayout>

